<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_activty"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!--  android:background="@drawable/background_button"-->

            <Button
                android:id="@+id/KeyYears"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/background_button"
                android:onClick="OpenKeyYears"
                android:text="מפתח השנים" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/Year_1"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/background_button"
                android:onClick="SelectYear"
                android:tag="Year_1"
                android:text="שנה א" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/Year_2"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/background_button"
                android:onClick="SelectYear"
                android:tag="Year_2"
                android:text="שנה ב" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/CurrentWeek1"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/background_button"
                android:onClick="CurrentWeek"
                android:tag="Year_1"

                android:text="הלימוד השבועי שנה א" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/CurrentWeek2"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/background_button"
                android:onClick="CurrentWeek"
                android:tag="Year_2"

                android:text="הלימוד השבועי שנה ב" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/LastLoction"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/background_button"
                android:onClick="LastLocation"
                android:text="שחזר מיקום אחרון" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/History"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/background_button"
                android:onClick="SelectHistory"
                android:text="היסטוריה" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/Settings"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/background_button"
                android:onClick="OpenSettings"
                android:text="הגדרות" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/Help"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/background_button"
                android:onClick="OpenHelp"
                android:text="עזרה" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/About"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/background_button"
                android:onClick="OpenAbout"
                android:text="אודות" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>