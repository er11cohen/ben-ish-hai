<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_activty"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/Intro"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/background_button"
                android:onClick="SelectIntro"
                android:text="הקדמה" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/HumashBreshit"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/background_button"
                android:onClick="SelectHumash"
                android:tag="Breshit"
                android:text="בראשית" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />


            <Button
                android:id="@+id/HumashShmot"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/background_button"
                android:onClick="SelectHumash"
                android:tag="Shmot"
                android:text="שמות" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/HumashVayikra"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/background_button"
                android:onClick="SelectHumash"
                android:tag="Vayikra"
                android:text="ויקרא" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/HumashBamidbar"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/background_button"
                android:onClick="SelectHumash"
                android:tag="Bamidbar"
                android:text="במדבר" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/HumashDvarim"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/background_button"
                android:onClick="SelectHumash"
                android:tag="Dvarim"
                android:text="דברים" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>