<LinearLayout 
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:background="@drawable/background_activty"
   >
    <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent">

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
   <Button
        android:id="@+id/Intro"
        android:layout_width="match_parent"
       android:layout_height="50sp"
        android:text="הקדמה"
        android:onClick="SelectIntro"
        android:background="@drawable/background_button"
        /> 
        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />
    <Button
        android:id="@+id/HumashBreshit"
        android:layout_width="match_parent"
         android:layout_height="50sp"
        android:text="בראשית"
        android:onClick="SelectHumash"
        android:tag="Breshit"
       android:background="@drawable/background_button"
        /> 
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />


    <Button
        android:id="@+id/HumashShmot"
        android:layout_width="match_parent"
       android:layout_height="50sp"
        android:text="שמות"
        android:onClick="SelectHumash"
        android:tag="Shmot"
       android:background="@drawable/background_button"
        /> 
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />
    
     <Button
        android:id="@+id/HumashVayikra"
        android:layout_width="match_parent"
       android:layout_height="50sp"
        android:text="ויקרא"
        android:onClick="SelectHumash"
        android:tag="Vayikra"
        android:background="@drawable/background_button"
        /> 
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />
    
      <Button
        android:id="@+id/HumashBamidbar"
        android:layout_width="match_parent"
         android:layout_height="50sp"
        android:text="במדבר"
        android:onClick="SelectHumash"
        android:tag="Bamidbar"
        android:background="@drawable/background_button"
        /> 
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />
    
       <Button
        android:id="@+id/HumashDvarim"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="דברים"
        android:onClick="SelectHumash"
        android:tag="Dvarim"
        android:background="@drawable/background_button"
        /> 
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />
    
        
		</LinearLayout>

	</ScrollView>
 </LinearLayout>